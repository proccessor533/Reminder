<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-notes" author="Dapi">
        <createTable tableName="notes">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="description" type="varchar(4096)">
                <constraints nullable="true"/>
            </column>
            <column name="remind" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_notes_id_user_id" references="users(id)" deleteCascade="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>